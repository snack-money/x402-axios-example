{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": ["bin/**/*", "src/**/*", ".env"],
  "exclude": ["node_modules", "dist", "coverage", "scripts", "tests", "brew"]
}
